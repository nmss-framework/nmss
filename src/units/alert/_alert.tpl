<section class="section">
    <h2 class="section-title">Alert</h2>

    <h3 class="section-description">alert--success</h3>

	<div class="alert alert--success">
		<span class="alert-icon"><i class="fa fa-check"></i></span>
		<span class="alert-message">This is a good message</span>
	</div>


    <h3 class="section-description">alert--warning</h3>

	<div class="alert alert--warning">
		<span class="alert-icon"><i class="fa fa-exclamation"></i></span>
		<span class="alert-message">This is a not so good message</span>
	</div>

    <h3 class="section-description">alert--error</h3>    

	<div class="alert alert--error">
		<span class="alert-icon"><i class="fa fa-exclamation"></i></span>
		<span class="alert-message">This is a bad message</span>
	</div>

    <h3 class="section-description">alert--info</h3>    

	<div class="alert alert--info">
		<span class="alert-icon"><i class="fa fa-info"></i></span>
		<span class="alert-message">This is just information</span>
	</div>	
</section>
